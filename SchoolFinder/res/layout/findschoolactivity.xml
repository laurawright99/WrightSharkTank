<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".FindSchoolView">

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"  
		android:onClick="onClickHome"/>
    
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Address" >

    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Filters" />
    
    <Button
        android:id="@+id/btn_miles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Maximum Miles Nearby" 
        android:onClick="onClickMiles"/>

    <Button
        android:id="@+id/btn_grade"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Grade Level " 
        android:onClick="onClickGrade"/>

    <Button
        android:id="@+id/btn_range"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="API Score Range" 
        android:onClick="onClickRange" />
    
<!-- NOT USED  <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true" />  -->

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSearch"
        android:text="SEARCH" />
    
    </LinearLayout>